--swiftversion 5.3

# indent
--indent 2
--ifdef no-indent

--self remove # redundantSelf
--importgrouping testable-bottom # sortedImports

# numberFormatting
--decimalgrouping 3
--hexgrouping "ignore"

# wrap
--maxwidth 80

# trailingCommas
--commas inline
--commas always # trailingCommas

# trailinc closure
--trailingclosures

# wrapArguments
--wraparguments before-first
--wrapcollections before-first
--wrapparameters before-first
--typeattributes prev-line # wrapAttributes
--funcattributes prev-line # wrapAttributes

--organizetypes class,struct,enum,extension # organizeDeclarations

# elseOnSameLine
--guardelse same-line

# rules
--rules anyObjectProtocol,redundantParens,redundantReturn,redundantSelf,sortedImports,strongifiedSelf,trailingCommas,trailingSpace,wrapArguments,wrapMultilineStatementBraces,indent,wrapAttributes,markTypes

